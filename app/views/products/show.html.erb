<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Product</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to products_path, class: button_class(theme: "transparent") do %>
      All Products
      <% end %>
      <%= link_to edit_product_path(@product), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Productid:</p>
        <p><%= @product.productID %></p>
      </li>
      <li>
        <p class="font-semibold">Brandid:</p>
        <p><%= @product.brandID %></p>
      </li>
      <li>
        <p class="font-semibold">Productname:</p>
        <p><%= @product.productName %></p>
      </li>
      <li>
        <p class="font-semibold">Image:</p>
        <p><%= @product.image %></p>
      </li>
      <li>
        <p class="font-semibold">Price:</p>
        <p><%= @product.price %></p>
      </li>
      <li>
        <p class="font-semibold">Discountpercent:</p>
        <p><%= @product.discountPercent %></p>
      </li>
      <li>
        <p class="font-semibold">Description:</p>
        <p><%= @product.description %></p>
      </li>
      <li>
        <p class="font-semibold">Stock:</p>
        <p><%= @product.stock %></p>
      </li>
  </ul>
</div>
