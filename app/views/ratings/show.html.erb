<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Rating</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to ratings_path, class: button_class(theme: "transparent") do %>
      All Ratings
      <% end %>
      <%= link_to edit_rating_path(@rating), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Rating:</p>
        <p><%= @rating.rating_id %></p>
      </li>
      <li>
        <p class="font-semibold">User:</p>
        <p><%= @rating.user_id %></p>
      </li>
      <li>
        <p class="font-semibold">Product:</p>
        <p><%= @rating.product_id %></p>
      </li>
      <li>
        <p class="font-semibold">Starsrated:</p>
        <p><%= @rating.starsRated %></p>
      </li>
  </ul>
</div>
